// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuarios {
  id           Int            @id @default(autoincrement())
  nome         String
  email        String         @unique
  senha        String
  usuarioGrupo usuarioGrupo[]
}

model Grupos {
  id           Int            @id @default(autoincrement())
  nome         String
  usuarioGrupo usuarioGrupo[]
  eventos      Eventos[]
}

model usuarioGrupo {
  usuarioId Int
  grupoId   Int
  usuario   Usuarios @relation(fields: [usuarioId], references: [id])
  grupo     Grupos   @relation(fields: [grupoId], references: [id])

  @@id([usuarioId, grupoId])
}

model Eventos {
  id        Int         @id @default(autoincrement())
  nome      String
  comeca    DateTime
  fim       DateTime
  grupoId   Int
  grupo     Grupos      @relation(fields: [grupoId], references: [id])
  poligonos Poligonos[]
}

model Poligonos {
  id        Int         @id @default(autoincrement())
  eventoId  Int
  evento    Eventos     @relation(fields: [eventoId], references: [id])
  local     Local[]
  atividade Atividade[]
}

model Local {
  id         Int       @id @default(autoincrement())
  latitude   String
  longitude  String
  poligonoId Int
  poligono   Poligonos @relation(fields: [poligonoId], references: [id])
}

model Atividade {
  id             Int       @id @default(autoincrement())
  nome           String
  horarioInicial DateTime
  horarioFinal   DateTime
  descricao      String
  poligonoId     Int
  poligono       Poligonos @relation(fields: [poligonoId], references: [id])
}
